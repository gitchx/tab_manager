{
  "manifest_version": 3,
  "name": "タブマネージャー",
  "version": "1.0",
  "description": "タブを選択して不要なタブを一括で閉じる拡張機能です。",
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
        }
  },
  "background": {
    "service_worker": "background.js"
  }
}
